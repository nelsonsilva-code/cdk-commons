{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es6"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "declaration": true
  },
  "exclude": [
    "./node_modules",
    "*/**/*.test.*"
  ]
}
